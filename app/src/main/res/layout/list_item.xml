<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardViewCategoryPlace"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#E8E0E0"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="10dp">

            <ImageView
                android:id="@+id/categoryPlaceImage"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/categoryPlaceName"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/redressed_regular"
                    android:text="Place Name "
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/categoryPlaceShowMap"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Show Map"
                        android:textColor="#000"
                        android:textSize="12dp"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
</androidx.cardview.widget.CardView>
