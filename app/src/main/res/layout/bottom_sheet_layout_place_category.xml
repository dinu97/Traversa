<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_forms"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:letterSpacing="-0.03"
                android:text="Close" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Place Category"
            android:letterSpacing="-0.03"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <HorizontalScrollView

                android:id="@+id/placeList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coordinate"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipByGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/nearByResturant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Restaurant"
                        android:textColor="@color/white"
                        app:checkedIconEnabled="false"
                        app:chipBackgroundColor="@color/primaryColor"
                        app:chipIcon="@drawable/ic_restaurant"
                        app:chipIconSize="15dp"
                        app:chipIconTint="@color/white"
                        app:chipStrokeWidth="1dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/nearByHospitals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Hospitals"
                        android:textColor="@color/white"
                        app:checkedIconEnabled="false"
                        app:chipBackgroundColor="@color/primaryColor"
                        app:chipIcon="@drawable/ic_hospital"
                        app:chipIconSize="15dp"
                        app:chipIconTint="@color/white"
                        app:chipStrokeWidth="1dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/nearByATM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="ATM"
                        android:textColor="@color/white"
                        app:checkedIconEnabled="false"
                        app:chipBackgroundColor="@color/primaryColor"
                        app:chipIcon="@drawable/ic_atm"
                        app:chipIconSize="15dp"
                        app:chipIconTint="@color/white"
                        app:chipStrokeWidth="1dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/nearByGasStation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="GasStation"
                        android:textColor="@color/white"
                        app:checkedIconEnabled="false"
                        app:chipBackgroundColor="@color/primaryColor"
                        app:chipIcon="@drawable/ic_gas_station"
                        app:chipIconSize="15dp"
                        app:chipIconTint="@color/white"
                        app:chipStrokeWidth="1dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/nearBySuperMarket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="SuperMarket"
                        android:textColor="@color/white"
                        app:checkedIconEnabled="false"
                        app:chipBackgroundColor="@color/primaryColor"
                        app:chipIcon="@drawable/ic_shopping_cart"
                        app:chipIconSize="15dp"
                        app:chipIconTint="@color/white"
                        app:chipStrokeWidth="1dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/nearByHotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Hotel"
                        android:textColor="@color/white"
                        app:checkedIconEnabled="false"
                        app:chipBackgroundColor="@color/primaryColor"
                        app:chipIcon="@drawable/ic_hotel"
                        app:chipIconSize="15dp"
                        app:chipIconTint="@color/white"
                        app:chipStrokeWidth="1dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/nearByPharmacies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Pharmacies"
                        android:textColor="@color/white"
                        app:checkedIconEnabled="false"
                        app:chipBackgroundColor="@color/primaryColor"
                        app:chipIcon="@drawable/ic_pharmacy"
                        app:chipIconSize="15dp"
                        app:chipIconTint="@color/white"
                        app:chipStrokeWidth="1dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/nearByCarWash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="CarWash"
                        android:textColor="@color/white"
                        app:checkedIconEnabled="false"
                        app:chipBackgroundColor="@color/primaryColor"
                        app:chipIcon="@drawable/ic_car_wash"
                        app:chipIconSize="15dp"
                        app:chipIconTint="@color/white"
                        app:chipStrokeWidth="1dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/nearBySalons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Salons"
                        android:textColor="@color/white"
                        app:checkedIconEnabled="false"
                        app:chipBackgroundColor="@color/primaryColor"
                        app:chipIcon="@drawable/ic_saloon"
                        app:chipIconSize="15dp"
                        app:chipIconTint="@color/white"
                        app:chipStrokeWidth="1dp" />


                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nearPlaceList"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="300dp" />

        <Button
            android:id="@+id/buttonAddNearByPlaces"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="0dp"
            android:letterSpacing="0"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:backgroundTint="@color/primaryColor"
            app:cornerRadius="10dip"
            android:text="Add" />

    </LinearLayout>




</RelativeLayout>
